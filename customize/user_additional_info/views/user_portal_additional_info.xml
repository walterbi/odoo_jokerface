<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit template id: portal_layout, details-->
    <template id="user_portal_additional_info" inherit_id="auth_signup.fields" name="Additional Signup info">
        <xpath expr="//div[@class='form-group field-confirm_password']" position="after">
            <div class="form-group field-phone">
                <label for="phone" class="control-label">* Your Phone</label>
                <input type="text" name="phone" t-att-value="phone" id="phone" class="form-control"
                    autocapitalize="off" required="required"/>
            </div>
            <div class="form-group field-street" required="required">
                <label for="street" class="control-label">Your Address</label>
                <input type="text" name="street" t-att-value="street" id="street" class="form-control"
                    autocapitalize="off"/>
            </div>
            <div class="form-group field-birthday">
                <label for="birthday" class="control-label">Your Birthday</label>
                <input type="date" name="birthday" t-att-value="birthday" id="birthday" class="form-control"
                    autocapitalize="off"/>
            </div>
        </xpath>
    </template>
</odoo>