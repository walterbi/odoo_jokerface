<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit template id: portal_layout, details-->
    <template id="user_portal_additional_info" inherit_id="auth_signup.fields" name="Additional Signup info">
        <xpath expr="//div[@class='form-group field-confirm_password']" position="after">
            <div class="form-group field-mobile">
                <label for="mobile" class="control-label">Your Phone</label>
                <input type="text" name="mobile" t-att-value="mobile" id="mobile" class="form-control"
                    autocapitalize="off" required="required"/>
            </div>
            <div class="form-group field-address">
                <label for="name" class="control-label">Your Address</label>
                <input type="text" name="address" t-att-value="street" id="street" class="form-control"
                    autocapitalize="off" required="required"/>
            </div>
            <div class="form-group field-birthday">
                <label for="birthday" class="control-label">Your Birthday</label>
                <input type="date" name="birthday" t-att-value="birthday" id="birthday" class="form-control"
                    autocapitalize="off" required="required"/>
            </div>
            <div class="form-group field-gender">
                <label for="gender" class="control-label">Gender</label>
                <input type="text" name="gender" t-att-value="gender" id="gender" class="form-control"
                    autocapitalize="off" required="required"/>
            </div>
        </xpath>
    </template>
</odoo>