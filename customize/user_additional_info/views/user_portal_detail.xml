<odoo>
    <template id="user_portal_detail" inherit_id="website_portal_templates.details">
        <xpath expr="//div[@class='row']" position="inside">
            <div t-attf-class="form-group #{error.get('birthday') and 'has-error' or ''} col-lg-6">
                <label class="control-label" for="name">Your Birthday</label>
                <input type="text" name="birthday" class="form-control" t-att-value="name or user.birthday" />
            </div>
        </xpath>
    </template>
</odoo>