<odoo>
    <template id="website_portal_sale.portal_my_home_menu_sale"
              name="Portal layout : sales menu entries" inherit_id="website_portal.portal_layout" priority="25">
        <xpath expr="//ul[contains(@class,'o_portal_submenu')]" position="inside">
            <li>
                <a href="/my/quotes">Quotes</a>
            </li>
            <li>
                <a href="/my/orders">Orders</a>
            </li>
            <li>
                <a href="/my/invoices">Invoices</a>
            </li>
            <li>
                <a href="/my/membership">Membership</a>
            </li>
        </xpath>
    </template>

    <template id="portal_my_membership" name="My Membership">
        <t t-call="website_portal.portal_layout">
            <h3 class="page-header">Your membership</h3>
            <table class="table table-hover o_my_status_table">
                <thead>
                    <tr class="active">
                        <th>Loại thành viên #</th>
                        <th>Điểm tích luỹ</th>
                        <th>Điểm đã sử dụng</th>
                    </tr>
                </thead>
                <tr>
                    <t t-if="membership == None">
                        <td>Không tìm thấy hội viên tương ứng</td>
                    </t>
                    <td>
                        <t t-esc="membership.type.name or 'Không tồn tại'"/>
                    </td>
                    <td>
                        <t t-esc="membership.earn_point or 0"/>
                    </td>
                    <td>
                        <t t-esc="membership.used_point or 0"/>
                    </td>
                </tr>
            </table>
        </t>
    </template>

    <template id="payment_membership" inherit_id="website_sale.payment">
        <xpath expr="//div[@id='payment_method']" position="after">
            <div class="js_payment mb64 row">
                <div class="col-lg-5 col-sm-6">
                    <h4>Membership Point:</h4>
                    <b><t t-esc="membership.earn_point"></t></b>
                </div>
                <div class="col-lg-5 col-sm-6">
                    <h4>Use point:</h4>
                    <t t-if="membership.earn_point > 0">
                        <input type="text" id="point_to_use"/>
                    </t>
                    <t t-if="membership.earn_point &lt;=0">
                        <p>Point to use is not available</p>
                    </t>
                </div>
                <div class="col-lg-5 col-sm-6">
                    <h4>Saving point:</h4>
                    <strong><t t-esc="point_saving"/></strong>
                </div>
            </div>
        </xpath>
    </template>

</odoo>