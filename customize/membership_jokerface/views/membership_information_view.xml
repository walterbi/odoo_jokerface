<odoo>
    <record model="ir.actions.act_window" id="membership_information_action">
        <field name="name">Membership Information</field>
        <field name="res_model">membership.information</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Tạo mới một thành viên</p>
        </field>
    </record>
    <menuitem id="membership_information_main_menu" name="Membership Info"
              action="membership_information_action" parent="membership_root_menu" sequence="2"/>

    <record model="ir.ui.view" id="membership_information_view_tree">
        <field name="name">membership.information.tree</field>
        <field name="model">membership.information</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="type" string="Loại thành viên"/>
                <field name="earn_point"/>
                <field name="used_point"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="membership_information_view_form">
        <field name="name">membership.information.form</field>
        <field name="model">membership.information</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group id="basic_information">
                        <field name="name" string="Alias"/>
                        <field name="related_user" string="Liên kết"/>
                        <field name="type"/>
                    </group>
                    <group id="membership_point">
                        <field name="earn_point" readonly="1"/>
                        <field name="used_point" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>